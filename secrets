# Add Secret
$ drone secret add \
  --name ssh_username \
  --data yedda \
  --repository yeddahsu/node-web-demo

$ drone secret add \
  --name ssh_password \
  --data P@ssw0rd \
  --repository yeddahsu/node-web-demo